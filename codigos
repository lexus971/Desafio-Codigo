4.

def primeira_letra_maiuscula(string):
    frases = string.split('. ')
    frases_formatadas = [e.capitalize() for e in frases]
    string_formatada = '. '.join(frases_formatadas)

    return string_formatada

frase = "hello. how are you? i'm fine, thank you"
frase_formatada = primeira_letra_maiuscula(frase)
print(frase_formatada)


